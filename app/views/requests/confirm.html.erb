<%= form_for @request do |f| %>
  <div class="field">
    郵便番号: <%= @request.zip %>
    <%= f.hidden_field :zip %>
  </div>
  <div class="field">
    住所: <%= @request.address %>
    <%= f.hidden_field :address %>
  </div>
  <div class="field">
    氏名: <%= @request.name %>
    <%= f.hidden_field :name %>
  </div>
  <div class="field">
    しめい: <%= @request.nameKana %>
    <%= f.hidden_field :nameKana %>
  </div>
  <div class="field">
    電話番号: <%= @request.tell %>
    <%= f.hidden_field :tell %>
  </div>
  <div class="field">
    メールアドレス: <%= @request.mailAddress %>
    <%= f.hidden_field :mailAddress %>
  </div>

  <div class="actions">
    <%= f.submit '戻る', name: 'back' %>
  </div>
  <div class="actions">
    <%= f.submit '登録する' %>
  </div>
<% end %>
