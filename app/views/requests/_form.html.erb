<%= form_for(@request, :url => {:action => 'confirm'}) do |f| %>
  <% if request.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(request.errors.count, "error") %> prohibited this request from being saved:</h2>

      <ul>
      <% request.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label "郵便番号" %>
    <%= f.text_field :zip, :maxlength => 10, onkeyup: "AjaxZip3.zip2addr(this,'','request[address]','request[address]');" %>
  </div>

  <div class="field">
    <%= f.label "住所" %>
    <%= f.text_field :address %>
  </div>

  <div class="field">
    <%= f.label "氏名" %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label "しめい" %>
    <%= f.text_field :nameKana %>
  </div>

  <div class="field">
    <%= f.label "電話番号" %>
    <%= f.telephone_field :tell %>
  </div>

  <div class="field">
    <%= f.label "メールアドレス" %>
    <%= f.text_field :mailAddress %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
